<h1>{{title}}</h1>

<table class="table table-striped mb-4">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each usuarios}}
      <tr>
        <td>{{nomePessoa}}</td>
        <td>
          <form method="POST" action="/usuarios/delete/{{codUsuario}}" class="mb-0">
            <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

<h2>Adicionar Novo Usuário</h2>
<form method="POST" action="/usuarios" class="mb-4">
  <div class="form-group">
    <label for="nomePessoa">Nome:</label>
    <input type="text" id="nomePessoa" name="nomePessoa" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-primary">Adicionar</button>
</form>

<a href="/" class="btn btn-secondary">Voltar</a>